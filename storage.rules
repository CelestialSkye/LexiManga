rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to validate file uploads
    function isValidImageFile(file) {
      // Maximum file size: 5MB
      let maxSize = 5 * 1024 * 1024;
      // Allowed MIME types
      let allowedTypes = ['image/jpeg', 'image/png'];
      
      return request.auth != null &&
             file.size <= maxSize &&
             file.contentType in allowedTypes;
    }
    
    // Avatar uploads - users can only upload their own avatars
    match /avatars/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId && 
                      isValidImageFile(request.resource);
      allow delete: if request.auth.uid == userId;
    }
    
    // Banner uploads - users can only upload their own banners
    match /banners/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId && 
                      isValidImageFile(request.resource);
      allow delete: if request.auth.uid == userId;
    }
    
    // Allow authenticated users to read/write files in their own user directory
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth.uid == userId;
    }
    
    // Allow all authenticated users to read public files
    match /public/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
    
    // Deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
